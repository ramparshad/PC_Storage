<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PCStorage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorAccent">#16E608</item>   <!-- icon color -->
        <item name="colorPrimaryDark">#FFF</item>   <!--text color-->
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.PCStorage" parent="Base.Theme.PCStorage" />

    <style name="dialog">
        <item name="android:windowBackground">@color/sky</item>
        <item name="windowNoTitle">true</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="My.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">#E9BA0C</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorPrimaryDark">#FFF</item>   <!--text color-->
        <item name="android:statusBarColor">@color/my_light_primary</item>"
    </style>
</resources>

